{
  "parser": "typescript-eslint-parser",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true,
    "mocha": true
  },
  "globals": {
    "angular": 1,
    "introJs": 1
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "indent": 0,
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": "warn",
    "quotes": ["warn", "single"],
    "semi": ["error", "always"]
  },
  "overrides": {
    "files": [
      "*.ts",
      "js/*.ts",
      "test/*.ts"
    ],
    "parser": "typescript-eslint-parser",
    "rules": {
      "no-undef": "off"
    }
  }
}
